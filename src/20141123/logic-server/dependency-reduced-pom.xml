<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.lodogame.ldsg</groupId>
  <artifactId>logic-server</artifactId>
  <name>logic-server</name>
  <version>0.0.1-SNAPSHOT</version>
  <url>http://maven.apache.org</url>
  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <testSourceDirectory>src/${build.mode}/java</testSourceDirectory>
    <testResources>
      <testResource>
        <directory>src/${build.mode}/resources</directory>
      </testResource>
    </testResources>
    <finalName>logic-server</finalName>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>2.0.2</version>
          <configuration>
            <encoding>UTF-8</encoding>
            <source>1.6</source>
            <target>1.6</target>
          </configuration>
        </plugin>
        <plugin>
          <artifactId>maven-resources-plugin</artifactId>
          <configuration>
            <encoding>UTF-8</encoding>
          </configuration>
        </plugin>
        <plugin>
          <artifactId>maven-shade-plugin</artifactId>
          <executions>
            <execution>
              <phase>package</phase>
              <goals>
                <goal>shade</goal>
              </goals>
              <configuration>
                <filters>
                  <filter>
                    <excludes>
                      <exclude>logic/*</exclude>
                      <exclude>server/*</exclude>
                      <exclude>log4j.properties</exclude>
                      <exclude>config.properties</exclude>
                      <exclude>jdbc.properties</exclude>
                      <exclude>applicationContext.xml</exclude>
                    </excludes>
                  </filter>
                </filters>
                <transformer>
                  <mainClass>com.lodogame.ldsg.server.LogicServer</mainClass>
                </transformer>
                <transformers>
                  <transformer>
                    <resource>META-INF/spring.handlers</resource>
                  </transformer>
                  <transformer>
                    <resource>META-INF/spring.schemas</resource>
                  </transformer>
                </transformers>
              </configuration>
            </execution>
          </executions>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
  <repositories>
    <repository>
      <releases />
      <id>local</id>
      <name>local Repository</name>
      <url>http://203.195.190.162:8081/nexus/content/repositories/thirdparty/</url>
    </repository>
    <repository>
      <releases />
      <id>snapshot</id>
      <name>snapshots Repository</name>
      <url>http://203.195.190.162:8081/nexus/content/repositories/snapshots/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>org.testng</groupId>
      <artifactId>testng</artifactId>
      <version>6.8</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>junit</artifactId>
          <groupId>junit</groupId>
        </exclusion>
        <exclusion>
          <artifactId>bsh</artifactId>
          <groupId>org.beanshell</groupId>
        </exclusion>
        <exclusion>
          <artifactId>jcommander</artifactId>
          <groupId>com.beust</groupId>
        </exclusion>
        <exclusion>
          <artifactId>snakeyaml</artifactId>
          <groupId>org.yaml</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>

