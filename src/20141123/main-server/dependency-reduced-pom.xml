<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.lodogame.ldsg</groupId>
  <artifactId>main-server</artifactId>
  <name>main-server</name>
  <version>0.0.1-SNAPSHOT</version>
  <description>main-server</description>
  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <testSourceDirectory>src/${build.mode}/java</testSourceDirectory>
    <extensions>
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
        <artifactId>wagon-webdav</artifactId>
        <version>1.0-beta-2</version>
      </extension>
    </extensions>
    <testResources>
      <testResource>
        <directory>src/${build.mode}/resources</directory>
      </testResource>
    </testResources>
    <finalName>main-server</finalName>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>2.0.2</version>
          <configuration>
            <encoding>UTF-8</encoding>
            <source>1.6</source>
            <target>1.6</target>
          </configuration>
        </plugin>
        <plugin>
          <artifactId>maven-resources-plugin</artifactId>
          <configuration>
            <encoding>UTF-8</encoding>
          </configuration>
        </plugin>
        <plugin>
          <artifactId>maven-shade-plugin</artifactId>
          <executions>
            <execution>
              <phase>package</phase>
              <goals>
                <goal>shade</goal>
              </goals>
              <configuration>
                <filters>
                  <filter>
                    <excludes>
                      <artifact>com.lodogame.ldsg:main-server</artifact>
                      <exclude>logic/*</exclude>
                      <exclude>server/*</exclude>
                      <exclude>log4j.properties</exclude>
                      <exclude>applicationContext.xml</exclude>
                    </excludes>
                  </filter>
                </filters>
                <transformers>
                  <transformer>
                    <mainClass>Start</mainClass>
                  </transformer>
                  <transformer>
                    <resource>META-INF/spring.handlers</resource>
                  </transformer>
                  <transformer>
                    <resource>META-INF/spring.schemas</resource>
                  </transformer>
                </transformers>
              </configuration>
            </execution>
          </executions>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
  <profiles>
    <profile>
      <id>windows</id>
      <properties>
        <build.mode>debug</build.mode>
      </properties>
    </profile>
    <profile>
      <id>linux</id>
      <properties>
        <build.mode>test</build.mode>
      </properties>
    </profile>
  </profiles>
  <repositories>
    <repository>
      <releases />
      <id>local</id>
      <name>local Repository</name>
      <url>http://203.195.190.162:8081/nexus/content/repositories/thirdparty/</url>
    </repository>
    <repository>
      <releases />
      <id>snapshot</id>
      <name>snapshots Repository</name>
      <url>http://203.195.190.162:8081/nexus/content/repositories/snapshots/</url>
    </repository>
  </repositories>
</project>

